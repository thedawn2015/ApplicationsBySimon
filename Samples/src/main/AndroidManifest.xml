        <activity android:name="com.simon.sample.toolbar.ToolbarActivity">

        </activity>
        <activity android:name="com.simon.sample.dialog.DialogActivity"
            android:theme="@style/TransparentTheme">

        </activity>
        <activity android:name="com.simon.sample.rx.RxActivity">

        </activity>
        <activity
