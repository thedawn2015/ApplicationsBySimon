<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_file"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.simon.sample.file.FileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/file_btn_get_sd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="获取SD路径"/>

            <Button
                android:id="@+id/file_btn_mkdirs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="mkdirs"/>

            <Button
                android:id="@+id/file_btn_take_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="take photo"/>

            <Button
                android:id="@+id/file_btn_get_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="get photo"/>

            <ImageView
                android:id="@+id/file_image_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/file_text_cache_path"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp16"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
