<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pager_tab"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.simon.sample.tab.PagerTabActivity">

    <com.simon.baseandroid.widget.PagerSlidingTabStrip
        android:id="@+id/pager_tab_title"
        android:layout_width="match_parent"
        android:background="#3F51B4"
        android:layout_height="50dp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_tab_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
