<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.simon.simpleretrofit.MainActivity">

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="帐号"
        android:text="yanshi"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="密码"
        android:text="123456"/>

    <Button
        android:id="@+id/request_http"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录"/>

    <ProgressBar
        android:id="@+id/download_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/downloaded_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下载量："/>

    <Button
        android:id="@+id/download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下载"/>


    <Button
        android:id="@+id/simple_rxjava"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="简单调用"/>

    <Button
        android:id="@+id/simple_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下载"/>

    <Button
        android:id="@+id/simple_pause"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="暂停"/>

    <Button
        android:id="@+id/simple_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="继续"/>


</LinearLayout>
